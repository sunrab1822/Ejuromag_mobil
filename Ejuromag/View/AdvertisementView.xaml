            <toolkit:MediaElement x:Name="two_ME" WidthRequest="400" HeightRequest="300" Source="embed://addtwo.mp4" Margin="5"/>
            <Label Text="Media markt" TextColor="White" FontSize="Large"  FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="0,20,0,0" TextDecorations="Underline"/>
            <toolkit:MediaElement x:Name="three_ME" WidthRequest="400" HeightRequest="300" Source="embed://addthree.mp4" Margin="5"/>
