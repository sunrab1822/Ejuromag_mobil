<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejuromag.View.PasswordResetView"
             Title="Password Reset"
             BackgroundImageSource="background.webp">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#026691"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout HorizontalOptions="Center">
        <Grid Margin="10,140,10,20" RowDefinitions="2*,2*,*,*" ColumnDefinitions="2*,*" HorizontalOptions="Center">
            <StackLayout Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Label VerticalTextAlignment="Center" Text="Email: " Grid.Column="0" WidthRequest="100"/>
                <Border>
                    <Entry Grid.Column="1" WidthRequest="160" Text="{Binding Email}"/>
                </Border>
            </StackLayout>
            <Button Text="Send email" Grid.Row="2" Margin="0,10,0,30" Command="{Binding ResetPasswordSendCommand}"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>