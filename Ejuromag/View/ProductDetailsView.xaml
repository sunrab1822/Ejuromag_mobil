<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejuromag.View.ProductDetailsView"
             Title="ProductDetailsView"
             BackgroundImageSource="background.webp">
    <Grid RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*">
        <Image Grid.Column="0"/>
        <StackLayout Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
            <Label Text="ProductName: "/>
            <Label/>
        </StackLayout>
        
        <StackLayout Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
            <Label Text="Manufacturer: "/>
            <Label/>
        </StackLayout>

        <StackLayout Grid.Column="1" Grid.Row="2" Orientation="Horizontal" >
            <Label Text="Brand: "/>
            <Label/>
        </StackLayout>
        
        <StackLayout Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
            <Label Text="Price: "/>
            <Label/>
        </StackLayout>

        <StackLayout Grid.Column="2" Grid.Row="3" Orientation="Horizontal">
            <Label Text="a"/>
        </StackLayout>
    </Grid>
</ContentPage>