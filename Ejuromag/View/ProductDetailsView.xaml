<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejuromag.View.ProductDetailsView"
             xmlns:tool="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             Title="{Binding SelectedProduct.name}"
             BackgroundImageSource="background.webp">
    <ContentPage.Behaviors>
        <tool:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing"/>
    </ContentPage.Behaviors>
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
        </Style>
    </ContentPage.Resources>
    <Grid RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*" Margin="5,0">
        <StackLayout Grid.Column="0" Grid.Row="0" HeightRequest="30">
            <StackLayout Orientation="Horizontal">
                <Label Text="ProductName: "/>
                <Label Text="{Binding SelectedProduct.name}"/>
            </StackLayout>
        </StackLayout>

        <StackLayout Grid.Column="0" Grid.Row="1" HeightRequest="30">
            <Label Text="Manufacturer: "/>
            <Label Text="{Binding ManufacturerName}"/>
        </StackLayout>

        <StackLayout Grid.Column="0" Grid.Row="2" HeightRequest="30">
            <Label Text="Category: "/>
            <Label Text="{Binding CategoryName}"/>
        </StackLayout>

        <StackLayout Grid.Column="0" Grid.Row="3" Orientation="Horizontal" HeightRequest="30">
            <Label Text="Price: "/>
            <Label Text="{Binding SelectedProduct.price}"/>
        </StackLayout>

        <StackLayout Grid.ColumnSpan="2" Grid.Row="4" HeightRequest="120">
            <Label Text="Description: "/>
            <Border WidthRequest="400" HeightRequest="120" BackgroundColor="#1493ca">
                <Label WidthRequest="300" Text="{Binding SelectedProduct.description}"/>
            </Border>
        </StackLayout>

        <Button Text="Add to cart" Grid.Row="5" Grid.ColumnSpan="2" HeightRequest="40" WidthRequest="150" CornerRadius="10" HorizontalOptions="Center" Command="{Binding AddToCartCommand}"/>
    </Grid>
</ContentPage>