<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejuromag.View.ProductsView"
             Title="Products"
             BackgroundImageSource="background.webp">
    <Grid RowDefinitions="*,4*">
        <Border Grid.Row="0" HeightRequest="80" WidthRequest="220" HorizontalOptions="Start" VerticalOptions="Start" Margin="10" Stroke="#026691" StrokeThickness="5">
            <Picker Margin="5" BackgroundColor="#1493ca" Title="Select from the Categories" ItemsSource="{Binding Product}" ItemDisplayBinding="{Binding Category.categoryName}" />
        </Border>

        <ScrollView Grid.Row="1">
            
        </ScrollView>
        
    </Grid>
</ContentPage>