<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ejuromag.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Ejuromag.View"
    xmlns:local="clr-namespace:Ejuromag"
    Shell.FlyoutBehavior="Flyout">
    
    <Shell.FlyoutHeader>
        <Grid>
            <Image Source="ejuromaglogo.webp"/>
        </Grid>
    </Shell.FlyoutHeader>

    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate views:MainPage}"
    />

    <FlyoutItem Title="Products">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:ProductsView}"/>
        </Tab>
    </FlyoutItem> 
    
    <FlyoutItem 
    Title="About us">
        <Tab>
            <ShellContent
            ContentTemplate="{DataTemplate views:AboutView}"/>
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem 
        Title="Order/Delivery">
        <Tab>
            <ShellContent
            ContentTemplate="{DataTemplate views:OrderAndDeliveryView}"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem
        Title="Advertisement">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate views:SecretView}"/>
        </Tab>
    </FlyoutItem>





</Shell>
